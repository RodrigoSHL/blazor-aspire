@page "/admin/reportcharts"
@rendermode InteractiveServer

<PageTitle>Chart Examples</PageTitle>

<h1>Reports - Sample Charts</h1>

<p>Below are four simple chart examples using Chart.js.</p>

<div class="row">
    <div class="col-md-6">
        <canvas id="chartBar1" width="400" height="300"></canvas>
    </div>
    <div class="col-md-6">
        <canvas id="chartBar2" width="400" height="300"></canvas>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <canvas id="chartPie1" width="400" height="300"></canvas>
    </div>
    <div class="col-md-6">
        <canvas id="chartPie2" width="400" height="300"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const barData1 = {
            labels: ["A", "B", "C", "D"],
            datasets: [{
                label: "Data 1",
                backgroundColor: "rgba(54, 162, 235, 0.5)",
                borderColor: "rgba(54, 162, 235, 1)",
                borderWidth: 1,
                data: [12, 19, 3, 5]
            }]
        };
        const barData2 = {
            labels: ["W", "X", "Y", "Z"],
            datasets: [{
                label: "Data 2",
                backgroundColor: "rgba(255, 99, 132, 0.5)",
                borderColor: "rgba(255, 99, 132, 1)",
                borderWidth: 1,
                data: [7, 11, 5, 8]
            }]
        };
        const pieData1 = {
            labels: ["Red", "Blue", "Yellow"],
            datasets: [{
                data: [10, 20, 30],
                backgroundColor: ["#ff6384", "#36a2eb", "#ffcd56"]
            }]
        };
        const pieData2 = {
            labels: ["Green", "Purple", "Orange"],
            datasets: [{
                data: [15, 25, 20],
                backgroundColor: ["#4bc0c0", "#9966ff", "#ff9f40"]
            }]
        };

        function buildCharts() {
            new Chart(document.getElementById('chartBar1'), {
                type: 'bar',
                data: barData1,
                options: { responsive: true }
            });

            new Chart(document.getElementById('chartBar2'), {
                type: 'bar',
                data: barData2,
                options: { responsive: true }
            });

            new Chart(document.getElementById('chartPie1'), {
                type: 'pie',
                data: pieData1,
                options: { responsive: true }
            });

            new Chart(document.getElementById('chartPie2'), {
                type: 'pie',
                data: pieData2,
                options: { responsive: true }
            });
        }

        document.addEventListener('DOMContentLoaded', buildCharts);
    </script>
}
